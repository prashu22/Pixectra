<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/userProfileCardViewBlue"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    android:id="@+id/card_subcription"
    android:layout_margin="6dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subcription Id : 54218547"
            android:textColor="#000000"
            android:textAlignment="center"
            android:background="#f0f0ff"
            android:id="@+id/subs_id"
            android:textSize="20dp"/>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="50dp"
            android:paddingTop="10dp"
           >
             <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subscription number :"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:layout_row="1"
                android:layout_column="1"
                 android:layout_marginRight="20dp"
                 />
              <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title :"
                android:textSize="18dp"
                android:textColor="#ffffff"
                android:layout_row="2"
                android:layout_column="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type :"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:layout_row="3"
                android:layout_column="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Starting date :"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:layout_row="4"
                android:layout_column="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount :"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:layout_row="5"
                android:layout_column="1"/>


            <TextView
                android:id="@+id/subs_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6548"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:layout_row="1"
                android:layout_column="2"
                />
            <TextView
                android:id="@+id/subs_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="full pack"
                android:textColor="#ffffff"
                android:layout_row="2"
                android:textSize="18dp"
                android:layout_column="2"/>

            <TextView
                android:id="@+id/subs_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 mon"
                android:textColor="#ffffff"
                android:textSize="15dp"
                android:layout_row="3"
                android:layout_column="2"/>

            <TextView
                android:id="@+id/subs_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11 mar 2018"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:layout_row="4"
                android:layout_column="2"/>

            <TextView
                android:id="@+id/subs_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:layout_row="5"
                android:layout_column="2"/>

        </GridLayout>
    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="renew"
        android:id="@+id/subs_renew"
        />
    </LinearLayout>
</android.support.v7.widget.CardView>
