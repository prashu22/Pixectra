<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"></android.support.constraint.ConstraintLayout>

<ImageView

        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/headerr"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="0dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="70dp"
        android:text="My Cart"
        android:textColor="#FFF"
        android:textSize="40sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTop0f="parent" />

    <LinearLayout

        android:id="@+id/poster_card_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="644dp"
        android:background="@drawable/bg"
        android:orientation="vertical"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="200dp">


        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardCornerRadius="20dp"

            tools:cardElevation="8dp"
            tools:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/image_title_poster"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="20dp"
                    android:background="#8888"
                    android:padding="5dp"
                    android:text="No title found"
                    android:textAlignment="center"
                    android:textSize="25sp"
                    android:textStyle="bold"

                    />

                <ProgressBar
                    android:id="@+id/progress_bar_photobook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />

                <ImageView
                    android:id="@+id/imageview_poster_recycler_view"
                    android:layout_width="306dp"
                    android:layout_height="178dp"
                    android:layout_above="@+id/progress_bar_photobook"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="17dp"
                    android:scaleType="fitXY"
                    tools:layout_editor_absoluteX="27dp"
                    tools:layout_editor_absoluteY="186dp" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</RelativeLayout>
</android.support.v7.widget.CardView>

<android.support.v7.widget.CardView
android:layout_width="250dp"
android:layout_height="match_parent"
android:padding="2dp"
android:id="@+id/cardOne"
android:background="@color/card_color">

//your view here like a Layout including textView.

    </android.support.v7.widget.CardView>

<android.support.v7.widget.CardView
android:layout_width="250dp"
android:layout_height="match_parent"
android:layout_marginStart="2dp"
android:padding="2dp"
android:id="@+id/cardTwo"
android:layout_toEndOf="@+id/cardOne"
android:background="@color/card_color">

//your view here like a Layout including textView.
</android.support.v7.widget.CardView>

    </RelativeLayout>
    </HorizontalScrollView>



    </android.support.constraint.ConstraintLayout>
